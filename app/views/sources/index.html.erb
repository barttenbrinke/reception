<h1>Sources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>&nbsp;</th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%=h source.name %> <i>(<%= source.enabled ? 'enabled' : 'disabled' %>)</i></td>
    <td><%= link_to 'Show', source %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', new_source_path %>